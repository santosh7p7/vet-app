<div class="row-fluid">
<div class="span5 offset1">
<span class="label label-important"><h1>Listing appointments</h1></span>
<br />
<br />
<br />
<table class="table table-bordered table-condensed table-stripe table-hover">
  <tr>
    <th>Appointment date</th>
    <th>Reminder</th>
    <th>Reason</th>
    <th>Doctor</th>
    <th>Customer</th>
    <th>Pet</th>
    <th></th>
  </tr>

<% @appointments.each do |appointment| %>
  <tr>
    <td><i class="icon-calendar"></i><%= appointment.appointment_date %></td>
    <td><%= appointment.reminder %></td>
    <td><%= appointment.reason %></td>
    <td><%= appointment.doctor.name %></td>
    <td><%= appointment.pet.customer.name %></td>
    <td><%= appointment.pet.name %></td>
    <td><%= link_to '', edit_appointment_path(appointment), class: 'icon-pencil' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Appointment', new_appointment_path %>
</div>
</div>
